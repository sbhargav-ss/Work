import React, { useState } from 'react';
import { Home, ArrowLeft, Users, Calendar, Code, ExternalLink } from 'lucide-react';

const NavigationSystem = () => {
  const [currentView, setCurrentView] = useState('home');
  const [selectedProject, setSelectedProject] = useState(null);
  const [activeSubject, setActiveSubject] = useState('web-dev');
  const [activeTab, setActiveTab] = useState('overview');

  // Project data
  const projects = [
    {
      id: 1,
      name: 'E-Commerce Platform',
      category: 'Web Development',
      shortDesc: 'Full-stack shopping platform',
      description: 'A comprehensive e-commerce solution built with modern web technologies, featuring real-time inventory management, secure payment processing, and responsive design.',
      timeline: 'January 2024 - March 2024',
      team: ['Sarah Johnson', 'Mike Chen', 'Lisa Rodriguez'],
      tech: ['React', 'Node.js', 'PostgreSQL', 'Stripe API', 'AWS'],
      status: 'Completed',
      screenshots: 3
    },
    {
      id: 2,
      name: 'Mobile Fitness Tracker',
      category: 'Mobile Development',
      shortDesc: 'Cross-platform health app',
      description: 'A feature-rich mobile application that tracks workouts, nutrition, and health metrics with AI-powered recommendations and social sharing capabilities.',
      timeline: 'February 2024 - May 2024',
      team: ['David Park', 'Emma Wilson', 'Tom Anderson'],
      tech: ['React Native', 'Firebase', 'TensorFlow Lite', 'Redux'],
      status: 'In Progress',
      screenshots: 4
    },
    {
      id: 3,
      name: 'AI Content Generator',
      category: 'Machine Learning',
      shortDesc: 'NLP-powered writing assistant',
      description: 'An intelligent content generation tool leveraging advanced NLP models to assist with creative writing, copywriting, and content optimization.',
      timeline: 'March 2024 - June 2024',
      team: ['Dr. Alex Kumar', 'Nina Patel', 'Chris Lee'],
      tech: ['Python', 'PyTorch', 'FastAPI', 'React', 'Docker'],
      status: 'Completed',
      screenshots: 5
    }
  ];

  // Subject data with tabs
  const subjects = {
    'web-dev': {
      name: 'Web Development',
      tabs: {
        overview: {
          title: 'Overview',
          content: 'Modern web development encompasses frontend, backend, and full-stack technologies. We focus on creating responsive, accessible, and performant web applications using industry-standard frameworks and best practices.'
        },
        technologies: {
          title: 'Technologies',
          content: 'Our tech stack includes React, Vue.js, Angular for frontend; Node.js, Python Django, Ruby on Rails for backend; and PostgreSQL, MongoDB for databases. We also utilize cloud services like AWS, Azure, and Google Cloud.'
        },
        projects: {
          title: 'Projects',
          content: 'Current web development projects include enterprise dashboards, e-commerce platforms, progressive web apps, and API integrations. Each project follows agile methodology with continuous integration and deployment.'
        },
        resources: {
          title: 'Resources',
          content: 'Access documentation, code repositories, design systems, and learning materials. Our resource library includes video tutorials, code samples, and best practice guides for all skill levels.'
        }
      }
    },
    'mobile-dev': {
      name: 'Mobile Development',
      tabs: {
        overview: {
          title: 'Overview',
          content: 'Mobile development focuses on creating native and cross-platform applications for iOS and Android. We emphasize user experience, performance optimization, and platform-specific design guidelines.'
        },
        technologies: {
          title: 'Technologies',
          content: 'We develop with React Native, Flutter, Swift, and Kotlin. Our apps integrate with device features, cloud services, and third-party APIs while maintaining security and performance standards.'
        },
        projects: {
          title: 'Projects',
          content: 'Active mobile projects span fitness tracking, social networking, educational apps, and enterprise solutions. Each app undergoes rigorous testing across multiple devices and OS versions.'
        },
        resources: {
          title: 'Resources',
          content: 'Mobile development resources include UI/UX guidelines, testing frameworks, app store optimization tips, and platform-specific documentation for iOS and Android development.'
        }
      }
    },
    'data-science': {
      name: 'Data Science',
      tabs: {
        overview: {
          title: 'Overview',
          content: 'Data science combines statistics, machine learning, and domain expertise to extract insights from data. We work on predictive modeling, data visualization, and business intelligence solutions.'
        },
        technologies: {
          title: 'Technologies',
          content: 'Our toolkit includes Python (pandas, scikit-learn, TensorFlow), R, SQL, Tableau, and Power BI. We leverage big data technologies like Spark and Hadoop for large-scale processing.'
        },
        projects: {
          title: 'Projects',
          content: 'Current initiatives include customer churn prediction, recommendation systems, sentiment analysis, and automated reporting dashboards for data-driven decision making.'
        },
        resources: {
          title: 'Resources',
          content: 'Data science resources feature datasets, Jupyter notebooks, statistical reference guides, and machine learning model documentation with real-world case studies.'
        }
      }
    }
  };

  const handleProjectClick = (project) => {
    setSelectedProject(project);
    setCurrentView('project-detail');
  };

  const handleHomeClick = () => {
    setCurrentView('home');
    setSelectedProject(null);
  };

  const handleSubjectChange = (subjectKey) => {
    setActiveSubject(subjectKey);
    setActiveTab('overview');
    setCurrentView('subject-detail');
  };

  // Home View Component
  const HomeView = () => (
    <div className="space-y-8 animate-fadeIn">
      <div className="bg-gradient-to-r from-blue-600 to-purple-600 text-white p-8 rounded-lg shadow-lg">
        <h1 className="text-4xl font-bold mb-2">Project Portfolio</h1>
        <p className="text-xl opacity-90">Explore our innovative projects and subject areas</p>
      </div>

      <div>
        <h2 className="text-2xl font-bold mb-4 text-gray-800">Featured Projects</h2>
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {projects.map((project) => (
            <div
              key={project.id}
              onClick={() => handleProjectClick(project)}
              className="bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 cursor-pointer transform hover:-translate-y-1 border border-gray-200"
              role="button"
              tabIndex={0}
              onKeyPress={(e) => e.key === 'Enter' && handleProjectClick(project)}
              aria-label={`View details for ${project.name}`}
            >
              <div className="p-6">
                <div className="flex items-start justify-between mb-3">
                  <h3 className="text-xl font-bold text-gray-800">{project.name}</h3>
                  <ExternalLink className="w-5 h-5 text-gray-400" />
                </div>
                <p className="text-sm text-blue-600 font-medium mb-2">{project.category}</p>
                <p className="text-gray-600 mb-4">{project.shortDesc}</p>
                <div className="flex items-center justify-between">
                  <span className={`px-3 py-1 rounded-full text-xs font-semibold ${
                    project.status === 'Completed' 
                      ? 'bg-green-100 text-green-800' 
                      : 'bg-yellow-100 text-yellow-800'
                  }`}>
                    {project.status}
                  </span>
                  <button className="text-blue-600 hover:text-blue-800 font-medium text-sm transition-colors">
                    View Details â†’
                  </button>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <div>
        <h2 className="text-2xl font-bold mb-4 text-gray-800">Subject Areas</h2>
        <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
          {Object.entries(subjects).map(([key, subject]) => (
            <button
              key={key}
              onClick={() => handleSubjectChange(key)}
              className="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-all duration-300 text-left border-2 border-transparent hover:border-blue-500"
              aria-label={`View ${subject.name} subject area`}
            >
              <h3 className="text-xl font-bold text-gray-800 mb-2">{subject.name}</h3>
              <p className="text-gray-600 text-sm">Explore topics and resources</p>
            </button>
          ))}
        </div>
      </div>
    </div>
  );

  // Project Detail View Component
  const ProjectDetailView = () => {
    if (!selectedProject) return null;

    return (
      <div className="space-y-6 animate-fadeIn">
        <button
          onClick={handleHomeClick}
          className="flex items-center text-blue-600 hover:text-blue-800 transition-colors font-medium"
          aria-label="Go back to home"
        >
          <ArrowLeft className="w-5 h-5 mr-2" />
          Back to Projects
        </button>

        <div className="bg-white rounded-lg shadow-lg overflow-hidden">
          <div className="bg-gradient-to-r from-blue-600 to-purple-600 text-white p-8">
            <h1 className="text-4xl font-bold mb-2">{selectedProject.name}</h1>
            <p className="text-xl opacity-90">{selectedProject.category}</p>
          </div>

          <div className="p-8 space-y-8">
            <section>
              <h2 className="text-2xl font-bold text-gray-800 mb-3">Project Description</h2>
              <p className="text-gray-700 leading-relaxed text-lg">{selectedProject.description}</p>
            </section>

            <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
              <section className="bg-gray-50 p-6 rounded-lg">
                <div className="flex items-center mb-3">
                  <Calendar className="w-6 h-6 text-blue-600 mr-2" />
                  <h3 className="text-xl font-bold text-gray-800">Timeline</h3>
                </div>
                <p className="text-gray-700">{selectedProject.timeline}</p>
              </section>

              <section className="bg-gray-50 p-6 rounded-lg">
                <div className="flex items-center mb-3">
                  <Users className="w-6 h-6 text-blue-600 mr-2" />
                  <h3 className="text-xl font-bold text-gray-800">Team Members</h3>
                </div>
                <ul className="space-y-2">
                  {selectedProject.team.map((member, index) => (
                    <li key={index} className="text-gray-700 flex items-center">
                      <span className="w-2 h-2 bg-blue-600 rounded-full mr-2"></span>
                      {member}
                    </li>
                  ))}
                </ul>
              </section>
            </div>

            <section className="bg-gray-50 p-6 rounded-lg">
              <div className="flex items-center mb-4">
                <Code className="w-6 h-6 text-blue-600 mr-2" />
                <h3 className="text-xl font-bold text-gray-800">Technical Specifications</h3>
              </div>
              <div className="flex flex-wrap gap-2">
                {selectedProject.tech.map((tech, index) => (
                  <span
                    key={index}
                    className="px-4 py-2 bg-blue-100 text-blue-800 rounded-full text-sm font-medium"
                  >
                    {tech}
                  </span>
                ))}
              </div>
            </section>

            <section>
              <h3 className="text-xl font-bold text-gray-800 mb-4">Screenshots & Demos</h3>
              <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
                {[...Array(selectedProject.screenshots)].map((_, index) => (
                  <div
                    key={index}
                    className="aspect-video bg-gradient-to-br from-gray-200 to-gray-300 rounded-lg flex items-center justify-center text-gray-500 font-medium"
                  >
                    Screenshot {index + 1}
                  </div>
                ))}
              </div>
            </section>
          </div>
        </div>
      </div>
    );
  };

  // Subject Detail View Component
  const SubjectDetailView = () => {
    const subject = subjects[activeSubject];

    return (
      <div className="space-y-6 animate-fadeIn">
        <button
          onClick={handleHomeClick}
          className="flex items-center text-blue-600 hover:text-blue-800 transition-colors font-medium"
          aria-label="Go back to home"
        >
          <ArrowLeft className="w-5 h-5 mr-2" />
          Back to Home
        </button>

        <div className="bg-white rounded-lg shadow-lg overflow-hidden">
          <div className="bg-gradient-to-r from-blue-600 to-purple-600 text-white p-8">
            <h1 className="text-4xl font-bold">{subject.name}</h1>
          </div>

          <div className="border-b border-gray-200 bg-gray-50">
            <div className="flex overflow-x-auto">
              {Object.entries(subject.tabs).map(([key, tab]) => (
                <button
                  key={key}
                  onClick={() => setActiveTab(key)}
                  className={`px-6 py-4 font-medium transition-all duration-200 whitespace-nowrap ${
                    activeTab === key
                      ? 'text-blue-600 border-b-2 border-blue-600 bg-white'
                      : 'text-gray-600 hover:text-gray-800 hover:bg-gray-100'
                  }`}
                  role="tab"
                  aria-selected={activeTab === key}
                  aria-label={`${tab.title} tab`}
                >
                  {tab.title}
                </button>
              ))}
            </div>
          </div>

          <div className="p-8" role="tabpanel">
            <h2 className="text-2xl font-bold text-gray-800 mb-4">
              {subject.tabs[activeTab].title}
            </h2>
            <p className="text-gray-700 leading-relaxed text-lg">
              {subject.tabs[activeTab].content}
            </p>
          </div>
        </div>
      </div>
    );
  };

  return (
    <div className="min-h-screen bg-gray-100 p-6">
      <div className="max-w-7xl mx-auto">
        {/* Navigation Header */}
        <nav className="bg-white rounded-lg shadow-md mb-8 p-4" role="navigation" aria-label="Main navigation">
          <div className="flex items-center justify-between">
            <button
              onClick={handleHomeClick}
              className={`flex items-center space-x-2 px-4 py-2 rounded-lg transition-all duration-300 ${
                currentView === 'home'
                  ? 'bg-blue-600 text-white shadow-md'
                  : 'text-gray-700 hover:bg-gray-100'
              }`}
              aria-label="Navigate to home page"
              aria-current={currentView === 'home' ? 'page' : undefined}
            >
              <Home className="w-5 h-5" aria-hidden="true" />
              <span className="font-medium">Home</span>
            </button>

            <div className="flex items-center space-x-4">
              <span className="text-gray-600 text-sm font-medium">
                {currentView === 'home' && 'Dashboard'}
                {currentView === 'project-detail' && selectedProject?.name}
                {currentView === 'subject-detail' && subjects[activeSubject]?.name}
              </span>
            </div>
          </div>
        </nav>

        {/* Main Content */}
        <main>
          {currentView === 'home' && <HomeView />}
          {currentView === 'project-detail' && <ProjectDetailView />}
          {currentView === 'subject-detail' && <SubjectDetailView />}
        </main>
      </div>

      <style jsx>{`
        @keyframes fadeIn {
          from {
            opacity: 0;
            transform: translateY(10px);
          }
          to {
            opacity: 1;
            transform: translateY(0);
          }
        }
        .animate-fadeIn {
          animation: fadeIn 0.3s ease-out;
        }
      `}</style>
    </div>
